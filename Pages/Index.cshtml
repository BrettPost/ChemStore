@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <a asp-page="Admin/Index">View/edit database</a>

    <form method="post">
        <p>
            Email: <input type="text" asp-for="email" />
        </p>
        <p>
            CAS number: <input type="text" asp-for="chemCAS" />
        </p>
        <p>
            Name: <input type="text" asp-for="chemName" />
        </p>
        <p>
            Location: <input type="text" asp-for="location" />
        </p>
        <p>
            Number of locations: <input type="text" asp-for="numLocation" />
        </p>
        <p>
            Container size: <input type="text" asp-for="size" />
            Units: <input type="checkbox" />
        </p>
        <p>
            <input type="submit" value="Filter" />
        </p>
    </form>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

</div>
