@page
@model ChemStoreWebApp.Pages.Admin.Containers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Container</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Container.ContainerId" />
            <div class="form-group">
                <label asp-for="Container.Unit" class="control-label"></label>
                <input asp-for="Container.Unit" class="form-control" />
                <span asp-validation-for="Container.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Container.Size" class="control-label"></label>
                <input asp-for="Container.Size" class="form-control" />
                <span asp-validation-for="Container.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Container.ChemId" class="control-label"></label>
                <input asp-for="Container.ChemId" class="form-control" />
                <span asp-validation-for="Container.ChemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Container.LocationId" class="control-label"></label>
                <input asp-for="Container.LocationId" class="form-control" />
                <span asp-validation-for="Container.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
